<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
    <!--
        Added the constraints for entity Person.
    -->
    <changeSet id="20210803004512-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="person_id"
                                 baseTableName="rel_person__event"
                                 constraintName="fk_rel_person__event__person_id"
                                 referencedColumnNames="id"
                                 referencedTableName="person"/>

        <addForeignKeyConstraint baseColumnNames="event_id"
                                 baseTableName="rel_person__event"
                                 constraintName="fk_rel_person__event__event_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event"/>

        <addForeignKeyConstraint baseColumnNames="person_id"
                                 baseTableName="rel_person__coffee"
                                 constraintName="fk_rel_person__coffee__person_id"
                                 referencedColumnNames="id"
                                 referencedTableName="person"/>

        <addForeignKeyConstraint baseColumnNames="coffee_id"
                                 baseTableName="rel_person__coffee"
                                 constraintName="fk_rel_person__coffee__coffee_id"
                                 referencedColumnNames="id"
                                 referencedTableName="coffee"/>
    </changeSet>
</databaseChangeLog>
